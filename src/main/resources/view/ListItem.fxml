<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ListItemController">
    <VBox spacing="5">
       <Label fx:id="requestNumberLabel" style="-fx-font-weight: bold" text="Заявка №000000" />
        <Label fx:id="descriptionLabel" style="-fx-font-size: 12; -fx-font-style: italic" text="Описание проблемы" />
        <Label fx:id="clientNameLabel" style="-fx-font-size: 14; -fx-font-weight: bold" text="Клиент: Фамилия Имя Отчество" />
    </VBox>
    <Region HBox.hgrow="ALWAYS" />
    <Button alignment="BOTTOM_RIGHT" onAction="#showDetails" text="Подробнее" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
